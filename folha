#include <stdio.h>
int continuacao(float base);
float inss = 0;
float inss1 = 75.0/1000;
float inss2 = 9.0/100;
float inss3 = 12.0/100;
float inss4 = 14.0/100;
int tempo = 0;
int main()
{
  printf("digite o salario base: ");
  float base = 0.0;
  scanf("%f", &base);
  if (base < 1412.00)
  {
    printf("valor abaixo do minimo\n");
  }
  else
    continuacao(base);
  return 0;
}
int continuacao(float base)
{
  if (base < 1412.00)
  {
  inss = 75.0/1000;
  }
  else if (base < 2666.68){
  inss = 9.0/100;
  }
  else if (base < 4000.03){
  inss = 12.0/100;
  }
  else {
  inss = 14.0/100;
  }

printf("\ndigite a seguir o valor do seguro de vida: ");
  float seguro = 0.0;
  scanf("%f", &seguro);
printf("\ndigite a seguir o valor do plano de saude: ");
  float plano = 0.0;
  scanf("%f", &plano);
printf("\ndigite a seguir a soma dos auxílios, vales e beneficios corporativos(sem contar os anteriores): ");
float vales = 0.0;
scanf("%f", &vales);
printf("\ndigite a seguir as horas extras pagas: ");
float extra = 0.0;
  scanf("%f", &extra);
  printf("\ndigite o tempo de serviço em anos do funcionário: ");
  scanf("%i", &tempo);
      float extratempo = 0;
  if (tempo < 5)
    {
      extratempo = (tempo/100.0) * base;
    }
    else
    {
      extratempo = (5/100.0) * base;
    }
  float fgts = 0.08;
  float fgtsdemissao = 0.04;
float brutus = base+vales+plano+seguro+extra+extratempo;
float sat = 0.03;
float ratfap = 0.04;
float ferias = brutus/12 + (brutus/3)/12;
float sistemaS = 0.033;
float deztrez = brutus/12;
float despesas = brutus*1.0+deztrez+ferias+brutus*inss*fgtsdemissao*sistemaS*sat*ratfap*fgts;
float despesasfunfact = brutus*1.0+deztrez+ferias+brutus*fgtsdemissao*sistemaS*sat*ratfap*fgts;
printf("\nO valor total de despesas com um funcionário, incluindo as reservas para despesas futuras, é: %f", despesas);
printf("\nAs despesas quando o salário base for: \n Menor que 1412: %f \n Maior ou igual a 1412 e menor que 2666: %f \n Maior ou igual a 2666 e menor que 4000: %f \n Maior ou igual a 4000: %f", despesasfunfact*inss1,
despesasfunfact*inss2,
despesasfunfact*inss3,
despesasfunfact*inss4);
return 0;  
}
